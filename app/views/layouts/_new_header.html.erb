<nav class="navbar navbar-expand-lg navbar-light">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="#"><%= image_tag 'venom_logo_v1.png' %></a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    </ul>

    <ul class="navbar-nav">
      <% if current_admin_user %>
        <li class="nav-item"><a class="nav-link" href="/manage">Admin</a></li>
      <% end %>

      <% if @menu_items %>
        <% @menu_items.each do |mi| %>

          <% if mi.menu_item_type_id == 1 %>
            <li class="nav-item"><a class="nav-link" href='<%= mi.location %>'><%= mi.label %></a></li>

          <% elsif mi.menu_item_type.id == 2 %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href='<%= mi.location %>' id="navbarDropdown<%= mi.id %>" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= mi.label %>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown<%= mi.id %>">
                <% if mi.children %>
                  <% mi.children.order(sort: :asc).each do |child| %>
                    <a class="dropdown-item" href="<%= mi.location %><%= child.location %>"><%= child.label %></a>
                  <% end %>
                <% end %>
              </div>
            </li>
          <% end %>

        <% end %>
      <% end %>
    </ul>
  </div>
</nav>
