<%= simple_form_for @product, html: {multipart: true} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :manufacturer %>
    <%= f.input :price %>
    <%= f.input :weight %>
    <%= f.input :paypal_button %>

    <%= f.file_field :product_image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
