<p id="notice"><%= notice %></p>

<div class="container">


  <%= link_to 'New Product', new_product_path %>

  <div class="row">
    <% @products.each do |product| %>

      <div class="col-sm-6 col-md-4 mt-5">
        <div class="product">
          <%= image_tag(product.product_image.url, class: "img-responsive" ) %>
          <br>
          <%= product.name %>
          <br>
          By: <%= product.manufacturer %>
          <br><br>
          <%= number_to_currency(product.price) %>
          <br><br>
          <%= product.paypal_button.html_safe %>

        </div>
      </div>
    <% end %>
  </div>

  <% if current_admin_user %>
    <div class="row">
      <div class="col-sm-2">
        Image
      </div>
      <div class="col-sm-2">
        Name
      </div>
      <div class="col-sm-2">
        PayPal Button
      </div>
      <div class="col-sm-2">
        Manufacturer
      </div>
      <div class="col-sm-1">
        Weight
      </div>
      <div class="col-sm-1">
        Price
      </div>
      <div class="col-sm-2">
      </div>
    </div>

  <% @products.each do |product| %>
    <div class="row">
      <div class="col-sm-2">TT
        <%= image_tag(product.product_image.url, class: "img-responsive" ) %>
      </div>
      <div class="col-sm-2">
        <%= product.name %>
      </div>
      <div class="col-sm-2">
      <%= product.paypal_button.html_safe %>
      </div>
      <div class="col-sm-2">
        <%= product.manufacturer %>
      </div>
      <div class="col-sm-1">
        <%= product.weight %>
      </div>
      <div class="col-sm-1">
        <%= product.price %>
      </div>
      <div class="col-sm-2">
        <%= link_to "Show", product_path(product) %>
        <%= link_to "Edit", edit_product_path(product) %>
        <%= link_to "Delete", product_path(product), method: :delete %>
      </div>
    </div>

  <% end %>
<% end %>
<br>
<br>
<br>
<br>
</div>