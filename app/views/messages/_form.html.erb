<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, placeholder: "My email address is...", label: "Your email address" %>
    <%= f.input :content, placeholder: "Type your message here...", label: "Message", input_html: { rows: 10 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send Message", class: "btn btn-outline-success" do %>
    <% end %>
  </div>
<% end %>
