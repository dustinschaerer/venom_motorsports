<fieldset class="col-xs-6 col-md-4 col-lg-3">
  <%= f.label :image, "Carousel Image" %>
  <%=
  image_tag(f.object.image, class: "img-responsive img-thumbnail") if f.object.image?
  %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "Remove Image", '#', class: "remove_fields btn btn-danger btn-block" %>
  <%= f.input :image, as: :file, label: "Upload File" %>

</fieldset>
