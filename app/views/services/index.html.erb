<div class="container-fluid bg-1">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1>Listing Services</h1>
      </div>
    </div>
  </div>
</div>

<div class="container m-t-20">
  <div class="row">
    <div class="col-xs-12">

      <p id="notice"><%= notice %></p>

      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Link text</th>
            <th>Link destination</th>
            <th>Sort</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @services.each do |service| %>
            <tr>
              <td><%= service.title %></td>
              <td><%= truncate(service.description, length: 60) %></td>
              <td><%= service.link_text %></td>
              <td><%= service.link_destination %></td>
              <td><%= service.sort %></td>
              <td><%= link_to 'Show', service, class: 'btn btn-sm btn-outline-primary' %></td>
              <td><%= link_to 'Edit', edit_service_path(service), class: 'btn btn-sm btn-outline-info' %></td>
              <td><%= link_to 'Destroy', service, class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to new_service_path, class: 'btn btn-outline-success' do %>
        <i class="fa fa-plus-circle"></i> Create New Service
      <% end %>
      <br>
      <br>
      <br>
    </div>
  </div>
</div>
